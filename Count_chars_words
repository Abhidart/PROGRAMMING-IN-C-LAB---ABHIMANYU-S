#include<stdio.h>
int main() 
{
    int cword=0, cchar=-1, i;
    char str[50];
    printf("Input : ");
    fgets(str, 30, stdin);
    for(i=0; str[i]!='\0'; i++)
    {
          	cchar++;
       			 if(str[i]==' ')
             {
          	cword++;	
             }	
     }
    	   printf("\nOutput :-\n");
   	   printf("\ncharacters = %d",cchar);
           printf("\nwords = %d\n",cword+1);
    return 0;
}
