#include<stdio.h>
int main() 
{
    int array[20], i, sum=0, size, *ptr;
    printf("Enter the size of the array : ");
    scanf("%d",&size);
    printf("Enter array elements :");
    for(i=0;i<size;i++){
        scanf("%d",&array[i]);
    }
    ptr = array;
    for(i=0;i<size;i++)
    {
        sum += *ptr;
        ptr++;	
        }
printf("\nsum is: %d\n",sum);
}
